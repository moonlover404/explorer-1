{
  "name": "@jpl/explorer-1",
  "version": "1.0.0-alpha.15",
  "description": "Packaged frontend assets for JPL's design system, Explorer 1",
  "author": "DesignLab",
  "repository": {
    "type": "git",
    "url": "https://github.com/nasa-jpl/explorer-1"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "run-p watch browsersync",
    "build": "npm run build:clean && parcel build ./src/index.js --no-source-maps && npm run build:fontcss",
    "build:fontcss": "cp ./src/scss/_fonts.scss ./dist/css/font-face.css",
    "build:clean": "rimraf ./dist && rimraf .parcel-cache",
    "watch": "rimraf ./src/_app && parcel ./src/index.html --dist-dir ./src/.parcel/",
    "browsersync": "browser-sync start --config bs.config.js",
    "sync:base": "node ./utils/buildBase.js",
    "sync:components": "node ./utils/buildComponentScss.js",
    "sync:all": "node ./utils/buildBase.js && node ./utils/buildComponentScss.js",
    "storybook": "start-storybook -c storybook -s storybook/static,dist -p 6006",
    "build-storybook": "build-storybook -c storybook -s storybook/static,dist -o storybook_compiled"
  },
  "parcel-namer-rewrite": {
    "rules": {
      "index.js": "js/explorer-1.min.js",
      "ArchivoNarrow-(.*)\\.(.*)\\.(woff2|woff)": "fonts/archivo-narrow/ArchivoNarrow-$1.$3",
      "Metropolis-(.*)\\.(.*)\\.(woff2|woff)": "fonts/metropolis/Metropolis-$1.$3",
      "index.css": "css/explorer-1.min.css"
    }
  },
  "dependencies": {
    "@storybook/addon-a11y": "^6.3.7",
    "@storybook/addon-docs": "^6.3.7",
    "@storybook/addon-storysource": "^6.3.7",
    "@tailwindcss/forms": "^0.2.1",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "tailwindcss": "^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@parcel/transformer-sass": "^2.0.0-beta.2",
    "@storybook/addon-essentials": "^6.4.0-alpha.33",
    "@storybook/html": "^6.4.0-alpha.33",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "copyfiles": "^2.4.1",
    "glob": "^7.1.6",
    "lazysizes": "^5.3.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.2",
    "parcel-namer-rewrite": "^2.0.0-beta.1-8",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^5.0.0",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "storybook-addon-themes": "^6.1.0",
    "swiper": "^6.6.2"
  }
}
