{
  "name": "jpl-design-system",
  "version": "1.0.0",
  "description": "Packaged styles and assets for the JPL design system",
  "author": "Stephanie C Smith, DesignLab",
  "scripts": {
    "start": "npm run dev",
    "dev": "run-p watch browsersync",
    "build": "npm run build:clean && parcel build ./src/jpl-design-system.js --dist-dir ./dist/assets/ --no-source-maps",
    "build:clean": "rimraf ./dist/assets && rimraf .parcel-cache",
    "watch": "rimraf ./src/_app && parcel ./src/jpl-design-system.html --dist-dir ./src/_app/",
    "browsersync": "browser-sync start --config bs.config.js",
    "sync:base": "node scripts/buildBase.js",
    "sync:components": "node scripts/buildComponentScss.js",
    "sync:all": "node scripts/buildBase.js && node scripts/buildComponentScss.js"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.2.1",
    "tailwindcss": "^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@parcel/transformer-sass": "^2.0.0-beta.2",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "copyfiles": "^2.4.1",
    "css-loader": "^5.1.1",
    "file-loader": "^6.2.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^5.2.0",
    "lazysizes": "^5.3.0",
    "mini-css-extract-plugin": "^1.3.9",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.2",
    "postcss": "^8.2.7",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^5.0.0",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.24.3",
    "webpack-build-notifier": "^2.1.1",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  }
}
