  "main": "index.js",
  "dependencies": {
    "@tailwindcss/forms": "^0.2.1",
    "autoprefixer": "^10.2.4",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.6",
    "tailwindcss": "^2.0.3"
  },
  "devDependencies": {
    "css-loader": "^5.1.1",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^5.0.0",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "test": "test",
    "dev": "webpack serve",
    "serve": "webpack serve --config ./src/webpack.config.js --progress --profile",
    "build:css": "postcss --config ./src/postcss.config.js --use autoprefixer --output ./dist/styles.css ./src/css/compiled.css",
    "build:tailwind": "tailwind build ./src/css/styles.css -c ./src/tailwind.config.js -o ./src/css/compiled.css"
